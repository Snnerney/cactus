import SimpleMediaCard from './SimpleMediaCard.astro';

export interface SimpleMediaItem {
    title: string;
    imageUrl: string;
    neodbUrl: string;
    date: string; // YYYY.MM.DD æˆ– YYYY.MM æ ¼å¼
}

export interface Props {
    title?: string;
    items: SimpleMediaItem[];
