interface Props {
  data: Record<string, number>;
}

const { data = {} } = Astro.props;

// å¤„ç†æ—¶é—´è½´æ•°æ®
const timelineData = Object.entries(data)
  .map(([date, count]) => ({
    date: new Date(date),
    dateStr: date,
    count,
    formatted: new Date(date).toLocaleDateString('zh-CN', { 
      year: 'numeric', 
      month: 'long', 
      day: 'numeric' 
    })
  }))
  .sort((a, b) => b.date.getTime() - a.date.getTime())
  .slice(0, 50); // é™åˆ¶æ˜¾ç¤ºæœ€è¿‘50ä¸ªæ´»è·ƒæ—¥æœŸ

// æŒ‰å¹´ä»½åˆ†ç»„
const groupedByYear = timelineData.reduce((acc, item) => {
  const year = item.date.getFullYear();
  if (!acc[year]) acc[year] = [];
  acc[year].push(item);
  return acc;
}, {} as Record<number, typeof timelineData>);

const years = Object.keys(groupedByYear).map(Number).sort((a, b) => b - a);
